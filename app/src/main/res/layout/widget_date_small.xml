<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_margin"
        android:background="@drawable/bg_s" >

        <ImageView
            android:id="@+id/hour_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="h1"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/hour_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="h2"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/hour_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="minIcon"
            android:src="@drawable/hour_icon" />

        <ImageView
            android:id="@+id/min_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="m1"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/min_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="m2"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/min_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="minIcon"
            android:src="@drawable/min_icon" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:gravity="bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="7dp"
        android:background="@drawable/date_bg_s"
        android:layout_marginLeft="0dp">

        <ImageView
        android:id="@+id/dw"

        android:layout_width="47dp"
        android:layout_height="47dp"

        android:contentDescription="Day of Week"
        android:src="@drawable/dw_2"
            android:background="#ffffffff"
            android:cropToPadding="false"
            android:longClickable="false"
            android:focusableInTouchMode="false"
            android:scaleType="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/date"
            android:paddingLeft="8dp"
            android:paddingRight="5dp">

            <ImageView
            android:id="@+id/month_1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="month_1"
            android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/month_2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="month_2"
            android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/month_icon"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="monthIcon"
            android:src="@drawable/month_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="1dp" />

            <ImageView
            android:id="@+id/day_1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="m2"
            android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp" />

            <ImageView
                android:id="@+id/day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="m2"
                android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/day_icon"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

                android:src="@drawable/day_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>