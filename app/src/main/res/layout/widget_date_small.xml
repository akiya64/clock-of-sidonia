<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_margin"
        android:background="@drawable/bg_s" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="h1"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="h2"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="minIcon"
            android:src="@drawable/hour_icon" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="m1"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="m2"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="minIcon"
            android:src="@drawable/min_icon" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:gravity="bottom"
    android:layout_width="236dp"
    android:layout_height="fill_parent"
    android:padding="@dimen/widget_margin"
        android:weightSum="1">

        <ImageView
        android:id="@+id/weekday"

        android:layout_width="47dp"
        android:layout_height="47dp"

        android:contentDescription="h1"
        android:src="@drawable/wd_1"
            android:background="#ffffffff"
            android:layout_marginLeft="1dp"
            android:cropToPadding="false"
            android:longClickable="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/date_bg_s"
            android:id="@+id/date"
            android:paddingLeft="5dp">

            <ImageView
            android:id="@+id/month_1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="month_1"
            android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/month_2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="month_2"
            android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/month_icon"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="m1"
            android:src="@drawable/month_icon"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dp"
                android:paddingRight="2dp" />

            <ImageView
            android:id="@+id/day_1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="m2"
            android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp" />

            <ImageView
                android:id="@+id/day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="m2"
                android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/day_icon"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

                android:src="@drawable/day_icon"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>