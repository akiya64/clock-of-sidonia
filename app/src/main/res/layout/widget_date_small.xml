<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_s" >

        <ImageView
            android:id="@+id/hour1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/hour2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit0"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/hour_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hour_icon"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp" />

        <ImageView
            android:id="@+id/min1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/min2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit0" />

        <ImageView
            android:id="@+id/min_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="minIcon"
            android:src="@drawable/min_icon"
            android:layout_marginLeft="1dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
        android:id="@+id/dw"

        android:layout_width="48dp"
        android:layout_height="48dp"

        android:src="@drawable/dw_2"
        android:background="#ffffffff"
            android:scaleType="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/date"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/date_bg_s">

            <ImageView
            android:id="@+id/month1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="month_1"
            android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <ImageView
            android:id="@+id/month2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="month_2"
            android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/month_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/month_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="2dp" />

            <ImageView
            android:id="@+id/day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="m2"
            android:src="@drawable/digit_d0"
            android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit_d0"
            android:layout_gravity="center_vertical" />

            <ImageView
            android:id="@+id/day_icon"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/day_icon"
            android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>