<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_l" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="h1l"
            android:src="@drawable/digit0l" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="h2l"
            android:src="@drawable/digit0l" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="minIconl"
            android:src="@drawable/hour_icon_l" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="m1l"
            android:src="@drawable/digit0l" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="m2l"
            android:src="@drawable/digit0l" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="minIconl"
            android:src="@drawable/min_icon_l" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="5dp"
        android:background="@drawable/date_bg_s" >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:contentDescription="Day of Week"
            android:src="@drawable/dw_2"
            android:background="#ffffffff"
            android:cropToPadding="false"
            android:longClickable="false"
            android:focusableInTouchMode="false"
            android:scaleType="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout"
            android:paddingLeft="7dp"
            android:paddingRight="2dp" >

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="month_1"
                android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="month_2"
                android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="monthIcon"
                android:src="@drawable/month_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="m2"
                android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="m2"
                android:src="@drawable/digit_d0"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/day_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="1dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>