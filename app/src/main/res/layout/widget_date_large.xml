<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_l"
        android:padding="15dp">

        <ImageView
            android:id="@+id/hour1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit0l" />

        <ImageView
            android:id="@+id/hour2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit0l" />

        <ImageView
            android:id="@+id/hour_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hour_icon_l"
            android:paddingRight="2dp" />

        <ImageView
            android:id="@+id/min1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit0l"
            android:focusableInTouchMode="true" />

        <ImageView
            android:id="@+id/min2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digit0l" />

        <ImageView
            android:id="@+id/min_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/min_icon_l" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_marginTop="12dp"
        android:background="@drawable/date_bg_s"
        android:layout_gravity="bottom"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <ImageView
            android:id="@+id/dw"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/dw_2l"
            android:background="#ffffffff"
            android:scaleType="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout"
            android:padding="3dp">

            <ImageView
                android:id="@+id/month1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/digit_d0l" />

            <ImageView
                android:id="@+id/month2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/digit_d0l"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/month_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/month_icon_l"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/digit_d0l"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/digit_d0l"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/day_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/day_icon_l"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>